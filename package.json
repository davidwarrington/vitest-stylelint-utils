{
  "name": "vitest-stylelint-utils",
  "version": "1.1.0",
  "description": "Utilities for testing Stylelint plugins with Vitest",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "stylelint",
    "vitest"
  ],
  "author": {
    "name": "David Warrington",
    "url": "https://github.com/davidwarrington"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidwarrington/vitest-stylelint-utils.git"
  },
  "bugs": {
    "url": "https://github.com/davidwarrington/vitest-stylelint-utils/issues"
  },
  "homepage": "https://github.com/davidwarrington/vitest-stylelint-utils/#readme",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "tsdown",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@davidwarrington/eslint-config": "^2.3.2",
    "@davidwarrington/prettier-config": "^2.2.3",
    "@types/node": "^24.0.13",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "stylelint": "^16.21.1",
    "vitest": "^3.2.4"
  }
}
